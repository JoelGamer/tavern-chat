<div class="flex flex-col gap-1 p-2 h-full min-w-fit bg-primary-900 overflow-scroll scrollbar-hidden">
  <%= link_to root_path, class: 'flex justify-center items-center p-1 bg-primary-800 rounded-lg' do %>
    <%= lucide_icon('home', class: 'bg-primary-900 rounded-lg text-white p-2', size: '48') %>
  <% end %>
  <hr class="border-primary-800" />
  <% taverns.each do |tavern| %>
    <%= link_to tavern_path(tavern), class: 'flex justify-center items-center p-1 bg-primary-800 rounded-lg backdrop-blur-md' do %>
      <div class="bg-primary-900 rounded-lg h-12 w-12"></div>
    <% end %>
  <% end %>
</div>
